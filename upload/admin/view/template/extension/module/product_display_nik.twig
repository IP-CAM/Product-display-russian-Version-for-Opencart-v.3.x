{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-heading">{{ entry_display_heading }}</label>
            <div class="col-sm-10">
              <select name="display_heading" id="input-display-heading" class="form-control">
                {% if display_heading %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-ordered">{{ entry_display_ordered }}</label>
            <div class="col-sm-4">
              <select name="display_ordered" id="input-display-ordered" class="form-control">
                {% if display_ordered %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
            <label class="col-sm-2 control-label" for="input-ordered-count-products">{{ entry_count_products }}</label>
            <div class="col-sm-4">
              <input type="text" name="ordered_count_products" value="{{ ordered_count_products }}" placeholder="{{ entry_count_products }}" id="input-ordered-count-products" class="form-control" />
              {% if error_ordered_count_products %}
                <div class="text-danger">{{ error_ordered_count_products }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-viewed">{{ entry_display_viewed }}</label>
            <div class="col-sm-4">
              <select name="display_viewed" id="input-display-viewed" class="form-control">
                {% if display_viewed %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
            <label class="col-sm-2 control-label" for="input-viewed-count-products">{{ entry_count_products }}</label>
            <div class="col-sm-4">
              <input type="text" name="viewed_count_products" value="{{ viewed_count_products }}" placeholder="{{ entry_count_products }}" id="input-viewed-count-products" class="form-control" />
              {% if error_ordered_count_products %}
                <div class="text-danger">{{ error_ordered_count_products }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-favorite">{{ entry_display_favorite }}</label>
            <div class="col-sm-4">
              <select name="display_favorite" id="input-display-favorite" class="form-control">
                {% if display_favorite %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
            <label class="col-sm-2 control-label" for="input-favorite-count-products">{{ entry_count_products }}</label>
            <div class="col-sm-4">
              <input type="text" name="favorite_count_products" value="{{ favorite_count_products }}" placeholder="{{ entry_count_products }}" id="input-favorite-count-products" class="form-control" />
              {% if error_favorite_count_products %}
                <div class="text-danger">{{ error_favorite_count_products }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-bestsellers">{{ entry_display_bestsellers }}</label>
            <div class="col-sm-4">
              <select name="display_bestsellers" id="input-display-bestsellers" class="form-control">
                {% if display_bestsellers %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
            <label class="col-sm-2 control-label" for="input-bestsellers-count-products">{{ entry_count_products }}</label>
            <div class="col-sm-4">
              <input type="text" name="bestsellers_count_products" value="{{ bestsellers_count_products }}" placeholder="{{ entry_count_products }}" id="input-bestsellers-count-products" class="form-control" />
              {% if error_bestsellers_count_products %}
                <div class="text-danger">{{ error_bestsellers_count_products }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-display-recommendation">{{ entry_display_recommendation }}</label>
            <div class="col-sm-4">
              <select name="display_recommendation" id="input-display-recommendation" class="form-control">
                {% if display_recommendation %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
            <label class="col-sm-2 control-label" for="input-recommendation-count-products">{{ entry_count_products }}</label>
            <div class="col-sm-4">
              <input type="text" name="recommendation_count_products" value="{{ recommendation_count_products }}" placeholder="{{ entry_count_products }}" id="input-recommendation-count-products" class="form-control" />
              {% if error_recommendation_count_products %}
                <div class="text-danger">{{ error_recommendation_count_products }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group" id="categories-row">
            <label class="col-sm-2 control-label" for="select-products-categories">{{ entry_recommended }}</label>
            <div class="col-sm-10">
              <select name="products_categories" id="select-products-categories" class="form-control">
                <option selected="selected">{{ text_categories }}</option>
                <option value="0">{{ text_all }}</option>
                {% for category in categories %}
                  <option value="{{ category.category_id }}">{{ category.name }}</option>
                {% endfor %}
              </select>
              <br>
              <input type="text" name="product_name" value="" placeholder="{{ entry_products_list }}" id="input-product" class="form-control" />
              <div id="featured-product" class="well well-sm" style="height: 150px; overflow: auto;">
                {% for product in products %}
                  <div id="featured-product{{ product.product_id }}"><i class="fa fa-minus-circle"></i> {{ product.name }}
                    <input type="hidden" name="product[]" value="{{ product.product_id }}" />
                  </div>
                {% endfor %}
              </div>
              <button class="btn btn-danger products-clear-btn" type="button">{{ button_clear }}</button>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="select-display-type">{{ entry_display_type }}</label>
            <div class="col-sm-10">
              <select name="display_type" id="select-display-type" class="form-control">
                  <option value="carousel" {% if display_type == "carousel" %}selected="selected"{% endif %}>{{ text_carousel }}</option>
                  <option value="table" {% if display_type == "table" %}selected="selected"{% endif %}>{{ text_table }}</option>
                  <option value="list" {% if display_type == "list" %}selected="selected"{% endif %}>{{ text_list }}</option>
                  <option value="tabs" {% if display_type == "tabs" %}selected="selected"{% endif %}>{{ text_tabs }}</option>
                  <option value="tabsInPopup" {% if display_type == "tabsInPopup" %}selected="selected"{% endif %}>{{ text_tabs_in_popup }}</option>
                  <option value="tabsWithCarousel" {% if display_type == "tabsWithCarousel" %}selected="selected"{% endif %}>{{ text_tabs_with_carousel }}</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="select-display-format">{{ entry_display_format }}</label>
            <div class="col-sm-10">
              <select name="display_format" id="select-display-format" class="form-control">
                {% if display_format %}
                  <option value="1" selected="selected">{{ text_separately }}</option>
                  <option value="0">{{ text_together_random }}</option>
                {% else %}
                  <option value="1">{{ text_separately }}</option>
                  <option value="0" selected="selected">{{ text_together_random }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group" style="display: none;">
            <label class="col-sm-2 control-label" for="input-button-class">{{ entry_button_class }}</label>
            <div class="col-sm-10">
              <input type="text" name="button_class" value="{{ button_class }}" placeholder="{{ entry_button_class }}" id="input-button-class" class="form-control" />
              {% if error_button_class %}
              <div class="text-danger">{{ error_button_class }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script type="text/javascript"><!--
$('input[name=\'product_name\']').autocomplete({
	source: function(request, response) {
		$.ajax({
			url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['name'],
						value: item['product_id']
					}
				}));
			}
		});
	},
	select: function(item) {
		$('input[name=\'product_name\']').val('');
		
		$('#featured-product' + item['value']).remove();
		
		$('#featured-product').append('<div id="featured-product' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="product[]" value="' + item['value'] + '" /></div>');	
	}
});
	
$('#featured-product').delegate('.fa-minus-circle', 'click', function() {
	$(this).parent().remove();
});

$('#select-products-categories').on('change', function() {
    $.ajax({
        url: 'index.php?route=extension/module/product_display_nik/getProductsByCategory&user_token={{ user_token }}&category_id=' +  $(this).val(),
        dataType: 'json',
        success: function(json) {
            let array = $.map(json, function(item) {
                return {
                    label: item['name'],
                    value: item['product_id']
                }
            })
            for (let item in array) {
                if(array.hasOwnProperty(item)) {
                    $('#featured-product' + array[item]['value']).remove();
                    $('#featured-product').append('<div id="featured-product' + array[item]['value'] + '"><i class="fa fa-minus-circle"></i> ' + array[item]['label'] + '<input type="hidden" name="product[]" value="' + array[item]['value'] + '" /></div>');
                }
            }
        }
    });
})

$('.products-clear-btn').on('click', function () {
    clearProductsList()
})
function clearProductsList() {
    $('#featured-product div').each(function (i, item) {
        $(item).remove()
    })
    $('#select-products-categories option:first').prop('selected', true);
}

$('#select-display-type').on('change', function () {
    if($(this).val() === 'tabsInPopup') {
        $('#select-display-format').parents('.form-group').hide();
        $('#input-button-class').parents('.form-group').show();
    } else if($(this).val() === 'carousel' || $(this).val() === 'table' || $(this).val() === 'list') {
        $('#input-button-class').parents('.form-group').hide();
        $('#select-display-format').parents('.form-group').show();
    } else {
        $('#input-button-class').parents('.form-group').hide();
        $('#select-display-format').parents('.form-group').hide();
    }
})

if($('#select-display-type').val() === 'tabsInPopup') {
    $('#select-display-format').parents('.form-group').hide();
    $('#input-button-class').parents('.form-group').show();
} else if($('#select-display-type').val() === 'carousel' || $('#select-display-type').val() === 'table' || $('#select-display-type').val() === 'list') {
    $('#input-button-class').parents('.form-group').hide();
    $('#select-display-format').parents('.form-group').show();
} else {
    $('#input-button-class').parents('.form-group').hide();
    $('#select-display-format').parents('.form-group').hide();
}

//--></script></div>
